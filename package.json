{
    "name": "@EtherPhoneBooth/ethereum-contracts",
    "version": "0.0.1",
    "description": "Ethereum phone booth smart contracts",
    "license": "MIT",
    "dependencies": {
        "@EtherPhoneBooth/config": "0.0.1",
        "eth-sig-util": "2.5.0",
        "eip712-helpers": "1.0.2",
        "openzeppelin-solidity": "2.3.0",
        "truffle-contract": "4.0.31"
    },
    "devDependencies": {
